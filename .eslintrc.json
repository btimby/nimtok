{
  "env": {
    "mocha": true,
    "browser": true
  },
  "ignorePatterns": [
    "tests/**/*"
  ],
  "extends": [
    "airbnb-base",
    "plugin:vue/base"
  ],
  "plugins": [
      "import",
      "mocha"
    ],
    "globals": {
      "logger": true,
      "exceptions": true,
      "td": true,
      "assert": true,
      "Assertion": true,
      "AssertionError": true
    },
    "rules": {
      "no-console": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "import/no-unresolved": "off",
      "no-multi-assign": "off",
      "no-continue": "off",
      "no-return-await": "off",
      "no-restricted-syntax": "off",
      "no-underscore-dangle": "off",
      "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "only-multiline"
      }]
    }
}
